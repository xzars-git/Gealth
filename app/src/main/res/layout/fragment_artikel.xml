<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FragmentArtikel">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Artikel"
                    android:textSize="20sp"
                    android:textColor="@color/darkGrey"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="35dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/artikel_1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:text="Durasi yang disarankan menggunakan smartphone"
                            android:textAlignment="textStart"
                            android:textColor="@color/darkGrey"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="14dp"
                            android:lineSpacingExtra="4dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/img_artikel1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 menit yang lalu"
                        android:textSize="12dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/softGrey"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/softGrey"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/artikel_2"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:text="Durasi yang disarankan menggunakan smartphone"
                            android:textAlignment="textStart"
                            android:textColor="@color/darkGrey"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="14dp"
                            android:lineSpacingExtra="4dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/img_artikel1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 menit yang lalu"
                        android:textSize="12dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/softGrey"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/softGrey"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:id="@+id/artikel_3"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:text="Durasi yang disarankan menggunakan smartphone"
                        android:textAlignment="textStart"
                        android:textColor="@color/darkGrey"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="14dp"
                        android:lineSpacingExtra="4dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_artikel1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 menit yang lalu"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/softGrey"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/softGrey"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</FrameLayout>