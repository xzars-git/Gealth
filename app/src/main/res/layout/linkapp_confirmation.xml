<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".LinkApp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_backbtn"
            android:id="@+id/backBtn"
            android:layout_marginTop="35dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Link Aplikasi"
            android:textSize="20sp"
            android:textColor="@color/darkGrey"
            android:gravity="center_horizontal"
            android:layout_marginTop="35dp"/>
    </LinearLayout>
    <View
        android:layout_width="320dp"
        android:layout_height="1sp"
        android:background="@color/softGrey"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/linkconfirmation_transparant_rectangle"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_game"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_gamename2"
            android:text="Mobile Legends"
            android:layout_marginTop="7dp"
            android:layout_marginStart="45dp"
            android:textColor="@color/darkGrey"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:text="Unlink"
            android:layout_alignParentEnd="true"
            android:textAllCaps="false"
            android:background="@drawable/ic_application_rectanglered"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/linkconfirmation_transparant_rectangle"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_game"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_gamename3"
            android:text="Mobile Legends"
            android:layout_marginTop="7dp"
            android:layout_marginStart="45dp"
            android:textColor="@color/darkGrey"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:text="Unlink"
            android:layout_alignParentEnd="true"
            android:textAllCaps="false"
            android:background="@drawable/ic_application_rectanglered"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"/>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAllCaps="false"
        android:text="Simpan"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>


</LinearLayout>