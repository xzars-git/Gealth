<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FragmentBeranda">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_home_rectangle" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selamat Datang"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/user_name"
                            android:text="Sugiono"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="24sp"
                            android:textColor="@color/white"
                            android:layout_marginStart="20dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:id="@+id/totalplay">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_sudahbermainselama" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sudah bermain selama"
                    android:textColor="@color/white"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="24sp"
                    android:text="0 Jam 0 Menit"
                    android:textColor="@color/white"
                    android:gravity="right"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="60dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_sisawaktumain"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sisa waktu bermain"
                    android:textColor="@color/white"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="60dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="right"
                    android:text="4 Jam 20 Menit"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Riwayat Aplikasi"
                android:textColor="@color/darkGrey"
                android:textSize="16sp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="35dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_game"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_gamename"
                        android:text="Mobile Legends"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/darkGrey"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_gametime"
                        android:text="1 menit yang lalu"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/softGrey"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="320dp"
                android:layout_height="1sp"
                android:layout_gravity="center_horizontal"
                android:background="@color/softGrey"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>