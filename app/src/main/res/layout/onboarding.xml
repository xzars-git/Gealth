<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Onboarding"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:id="@+id/onboardingSkipButton"
                    android:text="Skip"
                    android:textSize="20dp"
                    android:textColor="@color/green"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_gravity="right"/>
                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="485dp"
                    android:id="@+id/onboardingViewPager"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/indicator_dot"
                    android:layout_marginVertical="5dp"
                    android:layout_gravity="center_horizontal">
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_onboardingnext"
                    android:id="@+id/nextbtnOnboarding"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_daftar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Saya Pengguna Baru"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_btn_daftar"
            android:layout_marginEnd="40dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMasuk"
            android:text="@string/registration_text"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            android:shadowColor="@color/darkGrey"/>


</RelativeLayout>