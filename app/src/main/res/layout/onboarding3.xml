<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SplashScreen">
    <ImageView
        android:id="@+id/imageViewOnboarding1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        tools:srcCompat="@drawable/image_onboardingthree"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mulai Langkah Awalmu&#10;Bersama Kami"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/darkGrey"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        />
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Saya Pengguna Baru"
        android:layout_marginStart="40dp"
        android:background="@drawable/ic_btn_daftar"
        android:layout_marginEnd="40dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:layout_marginTop="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration_text"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:textAlignment="center"
        android:shadowColor="@color/darkGrey"
        android:layout_marginTop="20dp"/>


</LinearLayout>